<%# cssは商品出品のものを併用しています。
app/assets/stylesheets/items/new.css %>

<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>
  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">お部屋の情報を入力</h2>
    <%= form_with model: @room,local: true do |f| %>

    <%# インスタンスを渡して、エラー発生時にメッセージが表示されるようにしましょう。%>
    <% render 'shared/error_messages', model: f.object %>
    <%# //インスタンスを渡して、エラー発生時にメッセージが表示されるようにしましょう。%>

    <%# 出品画像 %>
   <div class="img-upload">
      <div class="weight-bold-text">
        お部屋の画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <%# /出品画像 %>
    <%# 商品名と商品説明 %>

    <%# /商品名と商品説明 %>

    <%# 商品の詳細 %>
    <div class="new-items">
      <div class="weight-bold-text">
        住所
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :address, class:"items-text", id:"item-name", placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
      <div class="weight-bold-text">
        最寄駅
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :station, class:"items-text", id:"item-name", placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
      <div class="weight-bold-text">
        利用可能日
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :date, class:"items-text", id:"item-name", placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
      <div class="weight-bold-text">
        連絡用電話番号
      </div>
      <%= f.text_area :phone_number, class:"items-text", id:"item-name", placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
      <div class="weight-bold-text">
        連絡用メールアドレス
      </div>
      <%= f.text_area :mail, class:"items-text", id:"item-name", placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
    </div>
    <%# /商品の詳細 %>

    <%# 配送について %>
    <div class="items-detail">
      <div class="weight-bold-text">お部屋の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          エアコン
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:air_conditioner_id, AirConditioner.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          キッチン
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:kitchen_id, Kitchen.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          トイレ
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:toilet_id, Toilet.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          お風呂
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:bathroom_id, Bathroom.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
         <div class="weight-bold-text">
          ペット
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:pet_id, Pet.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      </div>
    </div>

    <div class="items-explain">
        <div class="weight-bold-text">
          お部屋の追加説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :discribe, class:"items-text", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。" ,rows:"7" ,maxlength:"1000" %>
    </div>
    <%# /配送について %>

    <%# 販売価格 %>
        <div class="items-detail">
      <div class="weight-bold-text question-text">
        <span>Deposit(保証金)</span>
        <a class="question" href="#">?</a>
      </div>
    </div>

    <div class="price-content">
          <div class="price-text">
            <span>Deposit</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :deposit, class:"price-input", id:"item-price", placeholder:"例）300" %>
        </div>

    <div class="sell-price">
      <div class="weight-bold-text question-text">
        <span>価格</span>
      </div>
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>価格</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :price, class:"price-input", id:"item-price", placeholder:"例）300" %>
        </div>
      </div>
    </div>

    <%# /販売価格 %>

    <%# 注意書き %>
    <div class="caution">
      <p class="sentence">
        <a href="#">禁止されている出品、</a>
        <a href="#">行為</a>
        を必ずご確認ください。
      </p>
      <p class="sentence">
        またブランド品でシリアルナンバー等がある場合はご記載ください。
        <a href="#">偽ブランドの販売</a>
        は犯罪であり処罰される可能性があります。
      </p>
      <p class="sentence">
        また、出品をもちまして
        <a href="#">加盟店規約</a>
        に同意したことになります。
      </p>
    </div>
    <%# /注意書き %>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "変更する" ,class:"sell-btn" %>
      <%=link_to 'もどる', "#", class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">フリマ利用規約</a></li>
      <li><a href="#">特定商取引に関する表記</a></li>
    </ul>
    <%= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎Furima,Inc.
    </p>
  </footer>
</div>