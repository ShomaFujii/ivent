    <%= render "shared/header"%>

     <% if @rooms.empty? %>
     <div class = "empty">
      <h1 class = "no-result">NO RESULT</h1>
      <p class = "no-result-sub">検索結果はありませんでした。</p>
     </div>
     <%end%>

    <ul class='item-lists'>


    
     <% @rooms.each do |room| %>
      <li class='list'>
        <%= link_to room_path(room.id) do %>
        
        <div class='item-info'>
          <h3 class='user-name'>
            <%= room.user.nickname %>
          </h3>
        </div>

        <div class='item-img-content'>
          <%= image_tag room.image, class: "item-img" %>

            <% if room.rent.present?  %>
             <div class='agreement'> 
             <span>契約中</span> 
              </div>
            <% end %> 
        </div>


        <div class='item-info'>
          <h3 class='item-address'>
            <%= room.address %>
          </h3>
          <div class='item-price'>
            <span><%= room.price %>円<br></span>
          </div>
        </div>
        <% end %>
      </li>
    <% end %>
    </ul>

          <div class = "back-top-area">
        <a href="/rooms" class="back-top">TOP に戻る</a>
      </div>

    <%= render "shared/footer"%>