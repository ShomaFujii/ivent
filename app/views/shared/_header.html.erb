
<header class='top-page-header'>

  <div class='nav'>
    <ul class='lists'>
      <% if user_signed_in? %>
       <li><%= link_to current_user.nickname, "#", class: "user-nickname" %> </li> 
       <li><%= link_to 'SIGN OUT',  destroy_user_session_path, method: :delete, class: "logout" %> </li>

      <% else %> 
       <li><%= link_to 'SING IN',  new_user_session_path, class: "login" %></li>
       <li><%= link_to 'SING UP',  new_user_registration_path, class: "sign-up" %></li>

      <% end %>
    </ul>
  </div>
</header>